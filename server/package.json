{
    "name": "server",
    "version": "1.0.0",
    "description": "API server for the Stock Keeper app",
    "main": "server.js",
    "scripts": {
        "build": "rimraf dist && swc ./src ./config -d dist",
        "dev": "npm run docker:run && tsx watch ./src/server.ts watch ./config/**/* --project ./tsconfig.json",
        "docker:run": "docker compose up -d",
        "start": "node dist/server.js NODE_ENV=production",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write ./src/**/*",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "chalk": "^4.1.2",
        "config": "^3.3.9",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-async-handler": "^1.2.0",
        "http-status": "^1.6.2",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.0.2",
        "morgan": "^1.10.0",
        "slugify": "^1.6.5",
        "validator": "^13.9.0",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.41",
        "@tsconfig/node18": "^1.0.1",
        "@types/bcryptjs": "^2.4.2",
        "@types/config": "^3.3.0",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^18.15.3",
        "@types/validator": "^13.7.14",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-promise": "^6.1.1",
        "prettier": "^2.8.4",
        "rimraf": "^4.4.0",
        "tsx": "^3.12.5",
        "typescript": "^5.0.2",
        "winston": "^3.8.2"
    }
}
